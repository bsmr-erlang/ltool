{lfe_first_files, []}.

{eunit_compile_opts, [
   {src_dirs, ["test"]}
  ]}.

{deps, [
   {lfe, ".*", {git, "https://github.com/rvirding/lfe.git", {tag, "v0.10.1"}}},
   {lutil, ".*", {git, "https://github.com/lfex/lutil.git", {tag, "0.7.1"}}}
  ]}.

{plugins, [
   {'lfe-compile', ".*", {git, "https://github.com/lfe-rebar3/compile.git", {tag, "0.2.2"}}},
   {'lfe-version', ".*", {git, "https://github.com/lfe-rebar3/version.git", {tag, "0.2.2"}}},
   {'lfe-repl', ".*", {git, "https://github.com/lfe-rebar3/repl.git", {tag, "0.1.3"}}},
   {'lfe-clean', ".*", {git, "https://github.com/lfe-rebar3/clean.git", {tag, "0.1.1"}}},
   {'lfe-test', ".*", {git, "https://github.com/lfe-rebar3/test.git", {tag, "0.1.1"}}}
   %%{'lfe-compile', ".*", {git, "https://github.com/lfe-rebar3/compile.git", {branch, "master"}}},
   %%{'lfe-version', ".*", {git, "https://github.com/lfe-rebar3/version.git", {branch, "master"}}},
   %%{'lfe-repl', ".*", {git, "https://github.com/lfe-rebar3/repl.git", {branch, "master"}}},
   %%{'lfe-clean', ".*", {git, "https://github.com/lfe-rebar3/clean.git", {branch, "master"}}}
  ]}.

{provider_hooks, [
   {pre, [{compile, {lfe, compile}}]}
  ]}.
